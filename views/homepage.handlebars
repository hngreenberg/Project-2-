<!-- Loop over each object in the plants array -->
{{#each plants as |plant| }}
<div class="row mb-4 plant">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/plant/{{plant.id}}">{{plant.common_name}}</a>
    </h2>
    <br>
    <p>
      <span for="img" aria-label="money">☀️</span> <!-- may need to change aria-label -->
      Amount of Sunlight needed:
      <span class="dollar-amount">{{plant.sunlight}}</span>
    </p>
    <p> <span>💦</span>
      Amount of Water needed: {{plant.watering}}</p>
    {{!-- <p>Created by {{project.user.name}} on {{format_date project.date_created}}</p> --}}
  </div>
  <div class="col-md-7">
    <h3>Plant Nickname: {{plant.nickname}}</h3>
    <p>This plant was last watered on: {{format_date plant.date_lastwatered}}</p>
    <p>This plant last had plant food on: {{format_date plant.date_lastfed}}</p>
    <p>I got this plant on: {{format_date plant.date_acquired}}</p>
  </div>
</div>
{{/each}}